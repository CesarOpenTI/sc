<odoo>
  <data>
    <record id="Roads" model="ir.actions.act_window">
      <field name="name">Roads</field>
      <field name="res_model">roads</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,map,form</field>
    </record>

    <record id="Camera" model="ir.actions.act_window">
      <field name="name">Camera</field>
      <field name="res_model">camera</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="congested_map_view" model="ir.ui.view">
      <field name="name">Roads</field>
      <field name="model">roads</field>
      <field name="arch" type="xml">
          <map fieldLevel="levelCongestion"></map>
      </field>
    </record>

    <record id="congested_tree_view" model="ir.ui.view">
      <field name="name">Roads</field>
      <field name="model">roads</field>
      <field name="arch" type="xml">
          <tree>
            <field name="id"/>
            <field name="name"/>
            <field name="levelCongestion"/>
          </tree>
      </field>
    </record>

    <record id="camera_tree_view" model="ir.ui.view">
      <field name="name">Camera Tree</field>
      <field name="model">camera</field>
      <field name="arch" type="xml">
          <tree>
            <field name="ip"/>
            <field name="model"/>
          </tree>
      </field>
    </record>

    <record id="camera_form_view" model="ir.ui.view">
      <field name="name">Camera Form</field>
      <field name="model">camera</field>
      <field name="arch" type="xml">
          <form>
            <group>
              <field name="ip"/>
              <field name="model"/>
            </group>
            <group>
              <field name="user"/>
              <field name="passw"/>
              <field name="url"/>
            </group>
            <group>
              <img src="https://test.openti.cl/smart_city" alt="this is camera source"/>
            </group>
          </form>
      </field>
    </record>

    <menuitem id="roads" name="Roads" parent="smart" sequence="10"/>
    <menuitem id="roadsCongestion" name="Congestion in the Roads" parent="roads" action="Roads" sequence="13"/>
    <menuitem id="videoSources" name="Data Sources" parent="roads" action="Camera" sequence="12"/>

  </data>
</odoo>
