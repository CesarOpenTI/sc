<odoo>
  <data>

    <record id="CongestedRoads" model="ir.actions.act_window">
      <field name="name">Congested Roads</field>
      <field name="res_model">smart_trafic.roads</field>
      <field name="domain">[('levelCongested', '=', 1)]</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,map,form</field>
    </record>

    <record id="DescongestedRoads" model="ir.actions.act_window">
      <field name="name">Descongested Roads</field>
      <field name="res_model">smart_trafic.roads</field>
      <field name="domain">[('levelCongested', '>', 1)]</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,map,form</field>
    </record>

    <menuitem id="smart" name="Smart Trafic" web_icon="smart_trafic,static/description/icon.png" />
    <menuitem id="congested_roads" name="Congested Roads" parent="smart" action="CongestedRoads" sequence="10"/>
    <menuitem id="descongested_roads" name="Descongested Roads" parent="smart" action="DescongestedRoads" sequence="11"/>

    <record id="congested_map_view" model="ir.ui.view">
      <field name="name">Congested Roads</field>
      <field name="model">smart_trafic.roads</field>
      <field name="arch" type="xml">
          <map Lat="10" Lng="4"></map>
      </field>
    </record>

    <record id="descongested_map_view" model="ir.ui.view">
      <field name="name">Descongested Roads</field>
      <field name="model">smart_trafic.roads</field>
      <field name="arch" type="xml">
          <map Lat="10" Lng="4"></map>
      </field>
    </record>

  </data>
</odoo>
