<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <t t-name="ViewSmartTrafic.buttons">
      <div class="btn-group btn-group-sm" role="group">
          <button type="button" id="add" class="btn btn-primary">
              Add Record
          </button>
          <ul class="dropdown-menu o_graph_measures_list">
              <li>
                  <a href="#"></a>
              </li>
              <li class="divider"></li>
              <li><a href="#">Count</a></li>
          </ul>
      </div>
      <div class="btn-group btn-group-sm">
          <button class="btn btn-default fa fa-globe o_map_button" data-mode="earth" title="Earth"/>
          <button class="btn btn-default fa fa-map-signs o_map_button" data-mode="default" title="Map"/>
          <button class="btn btn-default fa fa-map-marker o_map_button" data-mode="hum" title="Humanitarian"/>
      </div>
    </t>

    <t t-name="ViewSmartTrafic">
      <div class="row ml16 mr16">
            <div id="mapId" class="map"></div>
        </div>
    </t>

    <div t-name="MapView.error" class="oe_view_nocontent" >
        <p><strong><t t-esc="title"/></strong></p>
        <p><t t-esc="description"/></p>
    </div>
</templates>
